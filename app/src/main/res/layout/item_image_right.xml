<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.github.library.bubbleview.BubbleImageView
            android:layout_width="200dp"
            android:id="@+id/chat_image_right"
            app:arrowLocation="right"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/img_profile_right"
            android:layout_height="180dp" />


        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/img_profile_right"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/user_avater"
            app:siBorderColor="@color/ash"
            app:siBorderWidth="1dp"
            app:siRadius="50dp"
            app:siSquare="true" />

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_profile_right"
            android:layout_toLeftOf="@+id/img_profile_right"
            android:layout_toStartOf="@+id/img_profile_right"
            android:layout_marginRight="50dp"
            android:layout_marginEnd="50dp"
            android:id="@+id/progressBar_chat_image_right" />

    </RelativeLayout>


</LinearLayout>