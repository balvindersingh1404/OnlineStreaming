<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/chat_image_left_video"
            android:layout_alignEnd="@+id/chat_image_left_video"
            android:layout_marginRight="68dp"
            android:layout_marginEnd="68dp"
            android:id="@+id/progressBar4" />

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/img_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/user_avater"
            app:siBorderColor="@color/ash"
            app:siBorderWidth="1dp"
            app:siRadius="50dp"
            app:siSquare="true" />

        <com.github.library.bubbleview.BubbleImageView
            android:layout_width="200dp"
            android:id="@+id/chat_image_left_video"
            app:arrowLocation="left"
            android:layout_toRightOf="@+id/img_profile"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="180dp" />



    </RelativeLayout>


</LinearLayout>